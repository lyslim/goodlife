<div class="row">
  <div class="column grid_10">
    <h1>All Rewards List</h1>
    <% if params[:view].nil? %>
      <table class="list">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Description</th>
          <th>RedeemPoints</th>
          <th>RedeemCount</th>
          <th>SaveMoney</th>
        </tr>
        <% for reward in @rewards %>
          <tr>
            <td><%= reward.id %></td>
            <td><%= link_to reward.name, edit_admin_reward_path(reward) %></td>
            <td><%= truncate reward.description, :length => 60, :separator => ' ' %></td>
            <td><%= reward.redeem_point %></td>
            <td><%= reward.redeem_count %></td>
            <td><%= reward.save_money %></td>
          </tr>
        <% end %>
      </table>
    <% elsif params[:view] == "grid" %>
      <div class="grid">
        <% for reward in @rewards %>
          <div class="feat">
            <div class="screenshot"><%= link_to image_tag("/assets/episodes/stills/dd.png", :size => "200x125"), reward %></div>
            <div class="title">
              #<%= reward.id %>
              <%= link_to reward.name, rewards_path %>
            </div>
          </div>
        <% end %>
        <div class="clear"></div>
      </div>
    <% end %>
  </div>
  <div class="column grid_3">
    <%= link_to "Create New Reward", new_admin_reward_path %>
    <h3>Search Reward</h3>
    <%= form_for @search,:url => admin_rewards_path, :html => {:method=>'get'} do |f| %>
	  <p>
        <%= f.label :name_or_description_contains %>
		<%= f.text_field :name_or_description_contains %>
      </p>
      <p><%= f.submit 'Go' %></p>
	<% end %>
    <h3>View Reward By Category</h3>
	<ul id="view_tags">
      <% RewardCategory.all.each do |c| %>
        <li><%= link_to c.name, :action=>:list_by_category, :key=>c.name %></li>
      <% end %>
	</ul>
  </div>
</div>