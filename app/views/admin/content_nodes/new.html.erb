<div class="row">
  <div class="column grid_10">
    <h1>New <%= @content_node.type %></h1>
    <p><a href="/admin/content_nodes">&laquo; Back to Content List</a></p>
    <%= form_for @content_node, :url => {:action => "create"}, :html => { :multipart => true } do |f| %>
      <p>
        <%= f.label "Title" %><br/>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label "Permalink" %><br/>
        <%= f.text_field :permalink %>
      </p>
      <p>
        <%= f.label "Content" %><br/>
        <%= f.text_area :content, :id => "kindeditor" %>
      </p>
      <p>
        <%= f.text_field :type, :value => @content_node.type, :type => "hidden" %>
      </p>
      <p><%= f.submit "Create" %></p>
    <% end %>
  </div>
  <%# render :partial => 'crud_right' %>
</div>