<div class="row">
  <div class="column grid_10">
    <h1>Edit <%= @content_node.type %></h1>
    <p><a href=<%="/admin/content_nodes/list?type=#{@content_node.type}"%>>&laquo; Back to <%= @content_node.type %> List</a></p>
    <%= form_for @content_node, :url => {:action => "update"}, :html => { :multipart => true } do |f| %>
      <p>
        <%= f.label "Title" %><br/>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label "Permalink" %><br/>
        <%= f.text_field :permalink %>
      </p>
      <p>
        <%= f.label "Content" %><br/>
        <%= f.text_area :content, :id => "kindeditor", :size => "80x30" %>
      </p>
      <p>
        <%= f.text_field :type, :value => @content_node.type, :type => "hidden" %>
      </p>
      <p><%= f.submit "Update" %></p>
    <% end %>
  </div>
</div>