<div class="row">
  <div class="column grid_10">
    <h1>New Feat</h1>
    <p><a href="/admin/feats">&laquo; Back to Feat List</a></p>
    <%= form_for @feat, :url => {:action => "create"}, :html => { :multipart => true } do |f| %>
      <p>
        <%= f.label "Category" %><br/>
        <%= collection_select :feat, :category_id, FeatCategory.all, :id, :name, {:include_blank => 'Please Select'}, :prompt => true %>
      </p>
      <p>
        <%= f.label "Title" %><br/>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label "Description" %><br/>
        <%= f.text_field :description %>
      </p>
      <p>
        <%= f.label "Why" %><br/>
        <%= f.text_area :why, :size => "80x10" %>
      </p>
      <p>
        <%= f.label "How" %><br/>
        <%= f.text_area :how, :size => "80x10" %>
      </p>
      <p>
        <%= f.label "Points" %><br/>
        <%= f.text_field :bonus_point %>
      </p>
      <div class="field">
        <%= f.fields_for :images do |image_fields| %>
	      <%= image_fields.file_field :upload %>
        <% end %>
      </div>
      <p><%= f.submit "Create" %></p>
    <% end %>
  </div>
  <%# render :partial => 'crud_right' %>
</div>