<div class="row">
  <div class="column grid_10">
    <h1>New <%= @tag.type %></h1>
    <p><a href="/admin/tags">&laquo; Back to Tag List</a></p>
    <%= form_for @tag, :url => {:action => "update"} do |f| %>
      <p>
        <%= f.label "Name" %><br/>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.text_field :type, :value => @tag.type, :type => "hidden" %>
      </p>
      <p><%= f.submit "Update" %></p>
    <% end %>
  </div>
  <%# render :partial => 'crud_right' %>
</div>