<div class="cell" id="center">
  <div class="form">
    <%= form_for @redemption, :url => {:action => "create"} do |f| %>
      <%#= f.hidden_field :reward_id, {:value => @reward.id} %>
      <div class="header top">你的奖励</div>
      <div class="rewardinfo">
        <div class="rewardpic" style="display: table-cell;"><%= image_tag @reward.image.url(:small) if @reward.image %></div>
        <div class="rewarddetail" style="display: table-cell; vertical-align: top;padding-left: 20px;font-size: 10pt;">
          <b><%= @reward.partner.business_name %></b>
          <br/>
          <span style="font-size: 9pt; font-weight: normal; color: #8F8F8F"><i><%= @reward.redeem_points %>个积分</i></span>
          <br/>
          <span style="font-size: 9pt; font-weight: normal; color: #8F8F8F"><%= "#{@reward.street}, #{@reward.city}, #{@reward.state}" %></span>
          <br/>
          <span style="font-size: 9pt; font-weight: normal; color: #8F8F8F">
            <%= @reward.phone %>
          </span>
          <br/>
          <br/>
          <%= @reward.name %>
          <br/>
          <br/>
          <b>更多信息:</b>
          <br/>
          <br/>
          <div style="overflow: auto; height: 90px; width: 400px; font-size: 8pt; border: 1px solid #f1f1f1"><%= @reward.information %></div>
          <br/>
          <br/>
          <b>有效期:</b>
          <%= @reward.valid_term %>
          <br/>
          <br/>
        </div>
      </div>

      <div class="header">你的资料</div>
      <div>
        <%= f.label "你的姓名:*" %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label "你的地址:*" %>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label "你的城市:*" %>
        <%= f.text_field :city %>
      </div>
      <div>
        <%= f.label "你的省份:*" %>
        <%= f.text_field :state %>
      </div>
      <div>
        <%= f.label "你的邮编:*" %>
        <%= f.text_field :zipcode %>
      </div>
      <div>
        <%= f.label "你的手机号码:*" %>
        <%= f.text_field :phone %>
      </div>

      <p><%= f.submit "兑换" %></p>
    <% end %>
  </div>
</div>
<div class="cell" id="right"><%= render :partial => "shared/rewardsrightbar" %></div>
