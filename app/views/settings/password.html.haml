= nav_at "更改密码", in: 'settings'

= form_for @user, :url => settings_password_path, :method => :put, :html => {:class => "form-horizontal"} do |f|
  .data
    .alert 密码更新成功后，您将被重定向到登录页面，请用新密码登录
    -if @user.errors.any?
      .alert-message.block-message.error
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg

  .control-group
    = f.label :new_password, "新密码", :class=>"control-label"
    .controls= f.password_field :password, :class => "input-xlarge"
  .control-group
    = f.label :password_confirmation, "确认新密码", :class=>"control-label"
    .controls= f.password_field :password_confirmation, :rows => 3, :class => "input-xlarge"
  .form-actions
    = f.submit '保存', :class => "primary btn"

