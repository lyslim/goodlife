= form_for @checkin do |f|
  -if @checkin.errors.any?
    #error_explanation
      %h2= "#{pluralize(@checkin.errors.count, "error")} prohibited this checkin from being saved:"
      %ul
        - @checkin.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :memo
    = f.text_area :memo
  .field
    = f.label :epic
    = f.check_box :epic
  .field
    = f.label :privacy
    = f.number_field :privacy
  .field
    = f.label :location
    = f.text_field :location
  .actions
    = f.submit 'Save'
