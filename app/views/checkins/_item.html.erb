<div class="feed">
<div class="feeditem">
  <div class="left">
    <div class="profile"></div>
    <div class="stamp"><%= image_tag checkin.feat.image.url(:thumb) %></div>
  </div>
  <div class="right">
    <div class="title"><%= checkin.user.name %> did !<%= checkin.feat.name %></div>
    <div class="message">
      <div class="evidence">pic here</div>
      <%= checkin.memo %>
    </div>
    <div class="timelocation"><%= time_ago_in_words checkin.created_at %> ago</div>
    <% checkin.challenges.each do |challenge| %>
    <div class="block">
      <div class="image"></div>
      <div class="text"><%= checkin.user.name %> was working on <%= challenge.name  %></div>
    </div>
    <% end %>
    <div class="props">
      <%= form_for Comment.new, :url => checkin_comments_path(checkin), :remote => true do |f| %>
        <ul class="proptypeslist"></ul>
        <%= f.text_area :content, :size => "40x1" %>
        <div class="giveprops">
          <%= link_to 'give prop', "javascript:void();", :onclick => "$(this).parent().parent().submit()"  %>
        </div>
      <% end if user_signed_in? %>
      <% if checkin.comments.size > 4 %>
        <div class="userprop"><div class="text"><%= link_to "View all #{checkin.comments.size} comments", checkin_comments_path(checkin), :remote => true %></div></div>
      <% end %>
      <div <%= "id=checkin_#{checkin.id}_comments" %>>
      <% checkin.comments.limit(4).each do |comment| %>
        <div class="userprop">
          <div class="text"><%= "#{comment.user.name} #{comment.content}" %></div>
          <div class="timestamp"><%= time_ago_in_words comment.created_at %> ago</div>
        </div>
      <% end %>
      </div>
    </div>
    <div class="block">
      <div class="image"></div>
      <div class="text"></div>
    </div>
  </div>
  <div style="clear:both;"></div>
</div>
</div>