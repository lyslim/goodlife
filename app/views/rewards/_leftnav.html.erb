<div class="leftnavitem <%= active_li_css(@view_by, "all") %>"><%= link_to "全部", search_local_rewards_path('all', params[:address]) %></div>
<% Tag.of_kind("Reward").each do |type| %>
  <% if params[:address].nil? %>
    <div class="leftnavitem <%=active_li_css(@view_by, type.name) %>"><%= link_to type.name, search_local_rewards_path(type.name) %></div>
  <% else %>
    <div class="leftnavitem <%=active_li_css(@view_by, type.name) %>"><%= link_to type.name, search_local_rewards_path(type.name, params[:address]) %></div>
  <% end %>
<% end %>