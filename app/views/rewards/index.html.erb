<% tableize @rewards,
            :name => 'rewards',
            :header => 'Listing Rewards',
            :generate_css => 'true' do |reward| %>

     <h3><%= reward.name %></h3>
     <p>
       <%= raw truncate reward.description, :length => 60, :separator => ' ' %>
     </p>
     <%= link_to 'show', :action => :index %>

<% end %>
