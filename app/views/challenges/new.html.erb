<div class="pagetitle"><h1>Create a new challenge</h1></div>
<div class="column grid_10">
  <div class="form">
    <%= form_for @challenge, :url => {:action => "create"}, :html => { :multipart => true } do |f| %>
      <div class="header">About your challenge</div>
      <div class="formrow">
        <div class="formlabel_wide">Challenge name:*</div>
        <div class="forminput" style="width: 450px"><%= f.text_field :name %></div>
      </div>
      <div class="formrow">
        <div class="formlabel_wide">Challenge description:*</div>
        <div class="forminput" style="width: 450px"><%= f.text_field :description %></div>
      </div>
      <div class="formrow">
        <%= f.fields_for :image do |builder| %>
          <p>
            <div class="formlabel_wide">Upload a picture:</div>
            <div class="forminput" style="width: 450px"><%= builder.file_field :upload %></div>
          </p>
        <% end %>
      </div>
      <br/>
      <br/>
      <div class="header">Feats</div>
      <div class="formrow">
        <div class="formlabel_wide">Add feats:*</div>
        <div class="forminput" style="width: 450px"><%= f.text_field :feat_tokens %></div>
      </div>
      <br/>
      <br/>
      <div class="header">Challenge Details</div>
      <div class="formrow">
        <div class="formlabel_wide">Start on:*</div>
        <div class="forminput" style="width: 450px"><%= f.text_field :start_on_string %></div>
      </div>
      <div class="formrow">
        <div class="formlabel_wide">End on:*</div>
        <div class="forminput" style="width: 450px"><%= f.text_field :end_on_string %></div>
      </div>
      <div class="formrow">
        <div class="formlabel_wide">Bonus points for wining:*</div>
        <div class="forminput" style="width: 150px"><%= f.select :bonus_points, [['no extra points', 0], ['10 points', 10], ['25 points', 25], ['50 points',50], ['75 points', 75]], :selected => 0 %></div>
      </div>
      <br/>
      <br/>
      <div class="buttoncontainer">
        <%= f.submit %> <%= link_to "Cancel", mine_challenges_path %>
      </div>
    <% end %>
  </div>
</div>
