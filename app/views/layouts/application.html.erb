<!DOCTYPE html>
<html>
<head>
  <title>GoodLife</title>
  <%= stylesheet_link_tag :all %>
  <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Droid+Sans:400,700">
  <%= javascript_include_tag :defaults, 'jquery-ui', 'script', 'jquery.pageless.min' %>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <div class="logo"><%= link_to image_tag("/images/im_logo_full.png"), root_path %></div>
      <%= render :partial => "shared/navigation" %>
    </div>
    <div class="pagetitle"><h1><%= @page_title %></h1></div>
      <div class="content row">
        <%= yield %>
      </div>
    <div id="footer">
      <%= render :partial => "shared/footer" %>
    </div>
  </div>
</body>
</html>
