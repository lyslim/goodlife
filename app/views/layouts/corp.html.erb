<!DOCTYPE html>
<html>
<head>
  <title>GoodLife</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery-ui' %>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <div class="logo"><%= link_to image_tag("/images/im_logo_full.png"), root_path %></div>
      <% if user_signed_in? %>
        <%= render :partial => "shared/navigation" %>
      <% else %>
        <%= render :partial => "shared/welcomenav" %>
      <% end %>
    </div>
    <div class="pagetitle"><h1><%= @page_title %></h1></div>
      <div class="content row">
        <div class="corp">
          <%= yield %>
        </div>
      </div>
    <div id="footer">
      <%= render :partial => "shared/footer" %>
    </div>
  </div>
</body>
</html>