<div class="feedcontainer">
<div class="feeditem">
  <div class="left">
    <div class="profilepic"></div>
    <div class="stamp"><%= image_tag checkin.feat.image.url(:thumb) %></div>
  </div>
  <div class="right">
    <div class="title"><%= link_to checkin.user.name, member_path(checkin.user) %> did <%= link_to checkin.feat.name, feat_path(checkin.feat) %></div>
    <div class="message">
      <div class="evidence">evidence pic here</div>
      <%= checkin.memo %>
    </div>
    <div class="timelocation"><%= time_ago_in_words checkin.created_at %> ago</div>
    <% checkin.challenges.each do |challenge| %>
    <div class="block">
      <div class="image"><%= link_to image_tag(challenge.image.url(:thumb)), challenge_path(challenge) %></div>
      <div class="text"><%= checkin.user.name %> was working on <%= challenge.name  %></div>
    </div>
    <% end %>
    <div class="props">
      <ul class="proptypeslist"></ul>
      <%= form_for Comment.new, :url=>checkin_comments_path(checkin), :method=> :post, :remote => true do |f| %>
        <%= f.text_area :content, :size => "40x1" %>
        <div class="giveprop">
          <%= link_to 'give prop', "javascript:void();", :onclick => "$(this).parent().parent().submit()"  %>
        </div>
      <% end if user_signed_in? %>
      <% if checkin.comments.size > 4 %>
      <div class="userprop">
        <div class="text"><%= link_to "View all #{checkin.comments.size} comments", checkin_comments_path(checkin), :remote => true %></div>
      </div>
      <% end %>
      <% checkin.comments.limit(4).each do |comment| %>
      <div class="userprop" userpropid=<%= comment.id %>>
        <div class="profilepic"><%#= link_to image_tag(comment.user.image.url(:thumb)), member_path(comment.user) %></div>
        <div class="text"><%= "#{comment.user.name} #{comment.content}" %></div>
        <div class="timestamp"><%= time_ago_in_words comment.created_at %> ago</div>
      </div>
      <% end %>
    </div>
    <% if checkin.feat.creator %>
    <div class="block">
      <div class="image"></div>
      <div class="text"></div>
    </div>
    <% end %>
  </div>
  <div style="clear:both;"></div>
</div>
</div>