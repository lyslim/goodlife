<div class="cell" id="center">
  <div class="memberdetails">
    <div class="profilepic cell" style="padding-right: 15px;"><%= image_tag('/images/im_facebookprofile.png') %></div>
    <div class="scores cell">
      <div style="display: table-row;"><div style="font-size:14px; display: table-cell; padding: 0 15px 5px 0;"><%= @member.life_score  %></div><div style="display: table-cell;">life score</div></div>
      <div style="display: table-row;"><div style="font-size:14px; display: table-cell; padding: 0 5px 5px 0;"><%= @member.feats_done.size  %></div><div style="display: table-cell;">feat done</div></div>
      <div style="display: table-row;"><div style="font-size:14px; display: table-cell; padding: 0 5px 5px 0;"><%= @member.earned_points  %></div><div style="display: table-cell;">points earned</div></div>
    </div>
    <div class="profile cell" style="text-align: right;">
      <div style="display: table-row;"><div style="width: 400px;display: table-cell; padding: 0 15px 5px 0;"><b>Location:</b><br/><%= @member.location %></div></div>
      <div style="display: table-row;"><div style="width: 400px;display: table-cell; padding: 0 15px 5px 0;"><b>A member Since:</b><br/><%= @member.confirmed_at.strftime "%m/%d/%Y" %></div></div>
      <div style="display: table-row;"><div style="width: 400px;display: table-cell; padding: 0 15px 5px 0;"><b>What inspires me to do good:</b><br/><%= @member.self_description %></div></div>
    </div>
  </div>
  <br/>
  <br/>
  <div class="tab_checkins">
    <% @member.checkins.each do |checkin| %>
      <%= render :partial => "shared/checkinfeed", :locals => {:checkin => checkin } %>
    <% end %>
  </div>
</div>
<div class="cell" id="right"><%= render :partial => "shared/rightbar" %></div>

