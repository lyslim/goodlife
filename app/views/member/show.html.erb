<div class="cell" id="center">
  <div class="memberdetails" style="font-size: 13px;">
    <div class="profilepic cell" style="padding-right: 15px;">
      <% if @member.avatar_file_name %>
        <%= image_tag @member.avatar.url(:normal) %>
      <% else %>
        <%= image_tag('/images/im_facebookprofile.png') %>
      <% end %>
    </div>
    <div class="scores cell">
      <div style="display: table-row;"><div style="display: table-cell;">分数</div><div style="font-size:14px; font-weight:bold; display: table-cell; padding: 0 15px 5px 5px;"><%= @member.life_score  %></div></div>
      <div style="display: table-row;"><div style="display: table-cell;">已作过事绩</div><div style="font-size:14px; font-weight:bold;display: table-cell; padding: 0 5px 5px 5px;"><%= @member.feats_done.size  %></div></div>
      <div style="display: table-row;"><div style="display: table-cell;">积分</div><div style="font-size:14px; font-weight:bold; display: table-cell; padding: 0 5px 5px 5px;"><%= @member.earned_points  %></div></div>
    </div>
    <div class="profile cell" style="text-align: right;">
      <div style="display: table-row;"><div style="width: 400px;display: table-cell; padding: 0 15px 5px 0;"><b>地址:</b><br/><%= @member.location %></div></div>
      <div style="display: table-row;"><div style="width: 400px;display: table-cell; padding: 0 15px 5px 0;"><b>加入日期:</b><br/><%= @member.invitation_accepted_at.nil? ? @member.created_at.strftime("%Y/%m/%d")  : @member.invitation_accepted_at.strftime("%Y/%m/%d") %></div></div>
      <div style="display: table-row;"><div style="width: 400px;display: table-cell; padding: 0 15px 5px 0;"><b>是什么鼓舞我:</b><br/><%= @member.information %></div></div>
    </div>
  </div>
  <br/>
  <br/>
  <div class="tab_checkins">
    <% @member.latest_checkins.each do |checkin| %>
      <%= render :partial => "shared/mycheckins", :locals => {:checkin => checkin } %>
    <% end %>
  </div>
</div>
<div class="cell" id="right"><%= render :partial => "shared/rightbar" %></div>

